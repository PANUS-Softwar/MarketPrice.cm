<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CNT_MAUI.Models.POCOs"
             x:Class="CNT_MAUI.Views.MarketView"
             Title="MarketView">

    <FlexLayout Direction="Column">
        <HorizontalStackLayout Padding="10" FlexLayout.Basis="120">
            <Button Text="Show Lookup Data Types" Margin="0,0,10,0" Command="{Binding LoadDataCommand}"/>
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding LookupDataTypes}" 
                        FlexLayout.Grow="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout x:DataType="models:LookupDataType" Padding="10">
                        <Label Text="{Binding LookupDataTypeId}" 
                               FontSize="15" 
                               FontAttributes="Bold"/>
                        <Label Text="{Binding LookupDataTypeName}" 
                               FontSize="12"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </FlexLayout>
</ContentPage>